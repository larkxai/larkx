# AWS Configuration
aws_region   = "us-east-1"
project_name = "larkx"
environment  = "prod"

# VPC Configuration (REQUIRED for production - use private subnets)
# vpc_id     = "vpc-xxxxxxxxx"
# subnet_ids = ["subnet-xxxxxxxxx", "subnet-yyyyyyyyy"]

# Cognito Configuration
cognito_callback_urls = [
  "https://app.larkx.ai/auth/callback",
  "https://www.larkx.ai/auth/callback"
]
cognito_logout_urls = [
  "https://app.larkx.ai",
  "https://www.larkx.ai"
]
enable_mfa = true  # REQUIRED for production

# S3 Configuration
enable_s3_versioning = true
s3_cors_origins = [
  "https://*.larkx.ai"
]

# RDS Configuration
rds_engine_version        = "16.11"  # Latest stable 16.x. Also available: 17.7, 18.1
rds_instance_class        = "db.t3.small"  # Consider db.t3.medium or larger for production workloads
rds_allocated_storage     = 100
rds_max_allocated_storage = 500
rds_storage_type          = "gp3"
rds_database_name         = "larkx"
rds_username              = "larkx_admin"
rds_password              = "CHANGE_THIS_PASSWORD"  # MUST use AWS Secrets Manager in production!

# RDS Network Configuration
rds_publicly_accessible = false  # MUST be false for production

# RDS Backup Configuration
rds_backup_retention_period = 30  # 30 days for production
rds_backup_window          = "03:00-04:00"
rds_maintenance_window     = "sun:04:00-sun:05:00"

# RDS Monitoring
rds_performance_insights_enabled = true  # ENABLED for production
rds_monitoring_interval          = 60    # 1 minute monitoring

# RDS Safety
rds_deletion_protection = true  # REQUIRED for production

# RDS Access (optional - for management access from specific IPs)
