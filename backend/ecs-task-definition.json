{
  "family": "larkx-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::414471878843:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::414471878843:role/larkx-backend-task-role",
  "containerDefinitions": [
    {
      "name": "larkx-backend",
      "image": "414471878843.dkr.ecr.us-east-1.amazonaws.com/larkx-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "COGNITO_USER_POOL_ID",
          "value": "us-east-1_oyBH3jRs5"
        },
        {
          "name": "COGNITO_CLIENT_ID",
          "value": "uqilh6thsojq6eng7n682pr9s"
        },
        {
          "name": "COGNITO_ISSUER_URL",
          "value": "https://larkx-prod.auth.us-east-1.amazoncognito.com"
        },
        {
          "name": "S3_BUILDS_BUCKET",
          "value": "larkx-builds-prod-414471878843"
        },
        {
          "name": "DATABASE_HOST",
          "value": "larkx-db-prod.ckbws8wi23zs.us-east-1.rds.amazonaws.com:5432"
        },
        {
          "name": "DATABASE_PORT",
          "value": "5432"
        },
        {
          "name": "DATABASE_NAME",
          "value": "larkx"
        },
        {
          "name": "DATABASE_USERNAME",
          "value": "larkx_admin"
        },
        {
          "name": "DATABASE_PASSWORD",
          "value": "YourPasswordFromTfvars"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/larkx-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "node -e \"require('http').get('http://localhost:3000/api', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})\""],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
